<!-- The Modal -->
<div class="modal fade" id="editmodel" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Modal Heading</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <form action="/users/profile/editfullName" method="post">
          <div class="form-group row">
            <label class=" col-3 col-form-label">FullName:</label>
            <div class="col-9">
              <input type="text" class="form-control" value="<%= fullName %>" name="fullName" id="fullName" required>
            </div>
            <div class="full" id="user"></div>

          </div>
          <div class="modal-footer">
            <button id="closemodal" type="button" class="btn btn-danger">Close</button>
            <button id="" type="submit" class="btn btn-primary">Save</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>