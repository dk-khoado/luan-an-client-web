<link rel="stylesheet" href="/stylesheets/freeprofile.css">

<div class="container">
    <div class="row">
        <div class="col-lg-4">
            <div class="profile-img">
                <label for="file-upload"><img
                        src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ7pmT3lMtcAaI0HyFel0IYCH9KnZnmU0ivlsl96QdtFVhq8FvB"
                        id="image" style="cursor: pointer;"></label>

                <input type="file" id="file-upload" />
            </div>
            <div class="title">
                <div class="row">
                    <div class="col-lg-4">
                        <label>Fullname</label>
                    </div>
                    <div class="col-lg-6">
                        <label><%= fullName %> </label>
                    </div>
                    <div class="col-lg-2 text-left">
                        <i class="fas fa-edit"></i>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-8">
                        <label>So du</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-8">
                        <label>Diem tich luy</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="profile">
            <div class="col-lg-8">
                <div class="card" style="width: 35rem;">
                    <div class="card-body">
                        <h5 class="card-title">Thoong tin ca nhan</h5>
                        <div class="row">
                            <div class="col-lg-2">
                                <label>
                                    Username
                                </label>
                            </div>
                            <div class="col-lg-6">
                                <label><%= username %> </label>
                            </div>
                            <div class="col-lg-4 text-right">
                                <button type="button" class="btn btn-primary p-custom-pf-0" data-toggle="modal" data-target="#myModal">
                                    <i class="fa fa-edit"></i></button>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-2">
                                <label>Email</label>
                            </div>
                            <div class="col-lg-6">
                                <label><%= email %> </label>
                            </div>
                            <div class="col-lg-4 text-right">
                                <i class="fas fa-edit"></i>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-2">
                                <label>Ngaysinh</label>
                            </div>
                            <div class="col-lg-6">
                                <label><%= birthday %> </label>
                            </div>
                            <div class="col-lg-4 text-right">
                                <i class="fas fa-edit"></i>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-2">
                                <label>Gioi tinh</label>
                            </div>
                            <div class="col-lg-6">
                                <label><%= gender %> </label>
                            </div>
                            <div class="col-lg-4 text-right">
                                <i class="fas fa-edit"></i>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>