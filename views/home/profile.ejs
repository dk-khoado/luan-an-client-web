<link rel="stylesheet" href="/stylesheets/freeprofile.css">

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="profile-img">
                <label for="file-upload"><img
                        src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ7pmT3lMtcAaI0HyFel0IYCH9KnZnmU0ivlsl96QdtFVhq8FvB"
                        id="image" style="cursor: pointer;"></label>

                <input type="file" id="file-upload" />
            </div>
            <div class="title">
                <div class="row">
                    <div class="col-md-8">
                        <label>Fullname</label>
                    </div>
                    <div class="col-md-4 text-left">
                        <i class="fas fa-edit"></i>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8">
                        <label>So du</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8">
                        <label>Diem tich luy</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="profile">
            <div class="col-md-8">
                <div class="card" style="width: 35rem;">
                    <div class="card-body">
                        <h5 class="card-title">Thong tin ca nhan</h5>
                        <div class="row">
                            <div class="col-md-4">
                                <label>Username</label>
                            </div>
                            <div class="col-md-8 text-right">
                                <i class="fas fa-edit"></i>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <label>Email</label>
                            </div>
                            <div class="col-md-8 text-right">
                                <i class="fas fa-edit"></i>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <label>Ngay sinh</label>
                            </div>
                            <div class="col-md-8 text-right">
                                <i class="fas fa-edit"></i>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <label>Gioi tinh</label>
                            </div>
                            <div class="col-md-8 text-right">
                                <i class="fas fa-edit"></i>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Modal Header</h4>
        </div>
        <div class="modal-body">
          <p>Some text in the modal.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
      
    </div>
  </div>
</div>

