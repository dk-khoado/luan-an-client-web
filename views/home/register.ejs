<div id="logreg-forms">
    <form action="/register" method="post">
        <h1 class="h3 mt-4 font-weight-normal" style="text-align: center"> Sign up</h1>
        <input type="text" id="username" name="username" class="form-control p-2" placeholder="Username" required="" onkeypress="return /^[A-Za-z0-9_]+$/i.test(event.key)"
            autofocus="" autocomplete="off">
        <input type="email" id="email" name="email" class="form-control p-2 mt-2" placeholder="Email address" required
            autofocus="" autocomplete="off">
        <input type="password" id="password" name="password" class="form-control p-2 mt-2" placeholder="Password" required
            autofocus="" autocomplete="off">
        <input type="password" id="repeatpass" class="form-control p-2 mt-2" placeholder="Confirm Password" required
            autofocus="" autocomplete="off">
        <!-- <div class="mt-3 font-weight-normal " style="visibility: hidden; text-align: center">
            <p>AAA</p>
          </div> -->
        <div class="input-group mt-2">
            <button class="btn btn-md btn-block submit p-2" type="submit"><i class="fas fa-user-plus"></i> SIGN UP
            </button>
        </div>
    </form>
</div>