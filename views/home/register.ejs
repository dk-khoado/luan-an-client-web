<div id="logreg-forms">
    <form action="/register" method="post">
        <h1 class="h3 mt-4 font-weight-normal" style="text-align: center"> Sign up</h1>
        <input type="text" id="username" name="username" class="form-control" placeholder="Full name" required=""
            autofocus="">
        <input type="email" id="email" name="email" class="form-control" placeholder="Email address" required
            autofocus="">
        <input type="password" id="password" name="password" class="form-control" placeholder="Password" required
            autofocus="">
        <input type="password" id="repeatpass" class="form-control" placeholder="Confirm Password" required
            autofocus="">
        <!-- <div class="mt-3 font-weight-normal " style="visibility: hidden; text-align: center">
            <p>AAA</p>
          </div> -->
        <div class="input-group">
            <button class="btn btn-md btn-block submit" type="submit"><i class="fas fa-user-plus"></i> Sign
                Up</button>
        </div>
    </form>
</div>